{
  "$schema": "https://developer.microsoft.com/en-us/json-schemas/teams/v1.16/MicrosoftTeams.schema.json",
  "manifestVersion": "1.16",
  "version": "1.0.0",
  "id": "REPLACE_WITH_YOUR_BOT_APP_ID",
  "packageName": "com.company.catalogexpertbot",
  "developer": {
    "name": "Your Company",
    "websiteUrl": "https://your-company.com",
    "privacyUrl": "https://your-company.com/privacy",
    "termsOfUseUrl": "https://your-company.com/terms"
  },
  "icons": {
    "color": "icon-color.png",
    "outline": "icon-outline.png"
  },
  "name": {
    "short": "Catalog Expert Bot",
    "full": "Teams App Catalog Expert Bot"
  },
  "description": {
    "short": "AI-powered Teams app catalog search",
    "full": "An intelligent bot that helps you search and discover Teams applications in your organization's app catalog using natural language queries."
  },
  "accentColor": "#FFFFFF",
  "bots": [
    {
      "botId": "REPLACE_WITH_YOUR_BOT_APP_ID",
      "scopes": [
        "personal",
        "team",
        "groupchat"
      ],
      "supportsFiles": false,
      "isNotificationOnly": false,
      "commandLists": [
        {
          "scopes": [
            "personal",
            "team",
            "groupchat"
          ],
          "commands": [
            {
              "title": "Help",
              "description": "Show available commands and help"
            },
            {
              "title": "Search apps",
              "description": "Search for Teams applications"
            },
            {
              "title": "Status",
              "description": "Check bot status and configuration"
            }
          ]
        }
      ]
    }
  ],
  "permissions": [
    "identity",
    "messageTeamMembers"
  ],
  "validDomains": [
    "REPLACE_WITH_YOUR_AZURE_WEBAPP_DOMAIN"
  ]
}
